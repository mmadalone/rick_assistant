#!/usr/bin/env zsh
# _rick_menu_separator - Print a separator line for the menu
#
# Usage:
#   _rick_menu_separator [width] [char]
#
# Arguments:
#   width - Optional width of the separator (defaults to menu width)
#   char - Optional character to use for the separator (defaults to ─ or -)
#
# Returns:
#   Prints the separator to stdout
#
# Example:
#   _rick_menu_separator 50 "="  # Prints a 50-character line of equal signs

# Function implementation
_rick_menu_separator() {
  local width="${1:-$RICK_MENU_WIDTH}"
  local char="${2:-}"
  
  # Validate width
  [[ "$width" -lt 1 ]] && width=$RICK_MENU_WIDTH
  
  # If no character specified, use the appropriate horizontal line
  if [[ -z "$char" ]]; then
    if (( _RICK_MENU_SUPPORTS_UNICODE )); then
      char="─"
    else
      char="-"
    fi
  fi
  
  # Print the separator
  printf "%${width}s" "" | tr " " "${char:0:1}"
}

# Call the function with the arguments passed to this script
_rick_menu_separator "$@" 